@model EvidencePojisteniWeb.Models.PojistnaUdalostModel

@{
    ViewData["Title"] = "Detail pojistné události";
}

<div class="container">
    <!-- HLAVIČKA -->
    <header class="p-2 border-bottom shadow-lg rounded-3 mb-4">
        <h4 class="mb-0 text-body-emphasis">
            @ViewData["Title"]
        </h4>
    </header>

    <!-- KARTA -->
    <div class="card shadow">
        <div class="card-body bg-success text-white rounded-3">

            <!-- ZÁKLADNÍ ÚDAJE -->
            <h5 class="mb-3 border-bottom pb-1">Základní údaje o události</h5>

            <div class="row mb-3">
                <div class="col-md-8">
                    <strong>@Html.DisplayNameFor(m => m.PopisUdalosti)</strong>
                    <div>@Html.DisplayFor(m => m.PopisUdalosti)</div>
                </div>
                <div class="col-md-4">
                    <strong>@Html.DisplayNameFor(m => m.DatumUdalosti)</strong>
                    <div>@Html.DisplayFor(m => m.DatumUdalosti)</div>
                </div>
            </div>

            <!-- MÍSTO A ŠKODA -->
            <h5 class="mt-3 mb-3 border-bottom pb-1">Místo a škoda</h5>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(m => m.MistoUdalosti)</strong>
                    <div>@Html.DisplayFor(m => m.MistoUdalosti)</div>
                </div>
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(m => m.Skoda)</strong>
                    <div>@Html.DisplayFor(m => m.Skoda)</div>
                </div>
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(m => m.Vyreseno)</strong>
                    <div>
                        @(Model.Vyreseno ? "Ano" : "Ne")
                    </div>
                </div>
            </div>

            <!-- SVĚDEK -->
            <h5 class="mt-3 mb-3 border-bottom pb-1">Svědek</h5>

            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>@Html.DisplayNameFor(m => m.Svedek)</strong>
                    <div>@Html.DisplayFor(m => m.Svedek)</div>
                </div>
                <div class="col-md-8">
                    <strong>@Html.DisplayNameFor(m => m.AdresaSvedka)</strong>
                    <div>@Html.DisplayFor(m => m.AdresaSvedka)</div>
                </div>
            </div>

            <!-- POJIŠTĚNÍ A POZNÁMKY -->
            <h5 class="mt-3 mb-3 border-bottom pb-1">Pojištění a poznámky</h5>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Typ pojištění</strong>
                    <div>@Model.Pojisteni?.PredmetPojisteni</div>
                </div>
                <div class="col-md-6">
                    <strong>@Html.DisplayNameFor(m => m.Poznamka)</strong>
                    <div>@Html.DisplayFor(m => m.Poznamka)</div>
                </div>
            </div>

            <!-- TLAČÍTKA -->
            <div class="mt-4 text-center">
                <a asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-outline-light px-4 me-2">
                    Upravit
                </a>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            Zpět na přehled
        </a>
    </div>
</div>
