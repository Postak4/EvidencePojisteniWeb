@model EvidencePojisteniWeb.Models.ViewModels.PojistnaUdalostIndexViewModel

@{
    ViewData["Title"] = "Moje pojistné události";
}

<div class="container mt-4">
    <h3>@ViewData["Title"]</h3>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            Nahlásit novou událost
        </a>
    </div>

    @if (!Model.Events.Any())
    {
        <div class="alert alert-info">
            Zatím nemáte žádné pojistné události.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Typ pojištění</th>
                    <th>Popis</th>
                    <th>Škoda</th>
                    <th>Stav</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Events)
                {
                    <tr>
                        <td>@e.DatumUdalosti.ToShortDateString()</td>
                        <td>@e.Pojisteni?.TypPojisteni</td>
                        <td>@e.PopisUdalosti</td>
                        <td>@e.Skoda.ToString("N0") Kč</td>
                        <td>
                            @if (e.Vyreseno)
                            {
                                <span class="badge bg-success">Vyřešeno</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Otevřená</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-outline-primary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-secondary">Upravit</a>
                            <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
