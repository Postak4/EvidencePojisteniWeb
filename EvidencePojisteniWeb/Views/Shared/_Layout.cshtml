@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="cs-CZ">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="PatKin" />
    <title>@ViewData["Title"] - EvidencePojisteniWeb</title>
    <link rel="shortcut icon" href="~/images/owl_icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EvidencePojisteniWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("CSS", required: false)
</head>

<body class="d-flex flex-column min-vh-100 overflow-x-hidden">

    <!-- Skip link pro klávesovou navigaci -->
    <a href="#content" class="visually-hidden-focusable position-absolute top-0 start-0 m-2">
        Přeskočit na obsah
    </a>

    <header class="sticky-top">
        <nav id="mainNav" class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm" aria-label="Hlavní navigace">
            <div class="container-fluid">
                <a class="navbar-brand mb-1 fs-4 fw-bold @(currentController == "Home" && currentAction == "Index" ? "text-warning" : "text-light")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Evidence pojištění web
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Přepnout navigaci">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="navbarContent" class="collapse navbar-collapse">
                    <ul class="navbar-nav nav-underline mx-auto">
                        <li class="nav-item mx-1">
                            <a class="nav-link text-light @(currentController == "Pojistenec" ? "active fw-bold" : "")"
                               asp-controller="Pojistenec" asp-action="Index"
                               aria-current="@(currentController == "Pojistenec" ? "page" : null)">Pojištěnci</a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link text-light @(currentController == "Pojisteni" ? "active fw-bold" : "")"
                               asp-controller="Pojisteni" asp-action="Index"
                               aria-current="@(currentController == "Pojisteni" ? "page" : null)">Pojištění</a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link text-light @(currentController == "PojistnaUdalost" ? "active fw-bold" : "")"
                               asp-controller="PojistnaUdalost" asp-action="Index"
                               aria-current="@(currentController == "PojistnaUdalost" ? "page" : null)">Události</a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link text-light @((currentController == "Home" && currentAction == "About") ? "active fw-bold" : "")"
                               asp-controller="Home" asp-action="About"
                               aria-current="@((currentController == "Home" && currentAction == "About") ? "page" : null)">O&nbsp;projektu</a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link text-light @((currentController == "Home" && currentAction == "Privacy") ? "active fw-bold" : "")"
                               asp-controller="Home" asp-action="Privacy"
                               aria-current="@((currentController == "Home" && currentAction == "Privacy") ? "page" : null)">GDPR</a>
                        </li>
                    </ul>

                    <partial name="~/Areas/Identity/Pages/_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>

    <main id="content" class="flex-grow-1">
        <div class="container py-2">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-fixed border-top text-muted">
        <div class="container d-flex align-items-center justify-content-center text-center">
            <p class="m-0 p-0">
                &copy; @DateTime.Now.Year – Evidence Pojištění Web.cz – App vytvořil
                    <a class="text-decoration-none mx-0" asp-controller="Demo" asp-action="LoginAsAdmin">
                        Patkin.cz
                    </a>
                – auto login pro DEMO.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
