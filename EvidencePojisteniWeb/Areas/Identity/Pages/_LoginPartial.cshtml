@using Microsoft.AspNetCore.Identity
@using EvidencePojisteniWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav nav-underline">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="border-primary rounded-2 bg-dark text-warning mt-0 p-2 p">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item ">
            <a class="nav-link text-light @(ViewContext.RouteData.Values["page"]?.ToString()
                         ==
                       "/Account/Register" ? "active fw-bold" : "")" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @(ViewContext.RouteData.Values["page"]?.ToString()
                     ==
                   "/Account/Login" ? "active fw-bold" : "")" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
        }
</ul>
